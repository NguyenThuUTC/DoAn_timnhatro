<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/icon_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgAvatar"/>
    <TextView
        android:id="@+id/txtTen"
        android:textColor="@color/text_blue"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:text="Nguyễn Thi Thu"
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/text_black"
        android:id="@+id/txtNoiDungBinhLuan"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:text="Nhà này tớ đang trọ, an ninh rất tốt nhé"
        android:layout_below="@id/txtTen"
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="29 tháng 3 lúc 8:40"
        android:layout_below="@id/txtNoiDungBinhLuan"
        android:layout_toRightOf="@id/imgAvatar"/>

</RelativeLayout>